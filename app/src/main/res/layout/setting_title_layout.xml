<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#111317"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:alpha="0.96">
    <ImageView
        android:id="@+id/garage_back_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/selector_back"
        android:layout_marginStart="20dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/garage_title"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:textAppearance="@style/mi_lanting_bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tx_garage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:includeFontPadding="false"/>
        <TextView
            android:textAppearance="@style/mi_lanting_light"
            android:textSize="12sp"
            android:textColor="@color/white_fifty"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tx_garage_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/setting_tip"
            android:includeFontPadding="false"/>
    </LinearLayout>
</RelativeLayout>
