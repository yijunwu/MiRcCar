<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/setting_title_layout"/>
    <RelativeLayout
        android:orientation="vertical"
        android:background="#111317"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <ImageView
            android:id="@+id/hand_bg_img"
            android:layout_width="567dp"
            android:layout_height="201dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/left_hand_bg"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true">
            <Button
                android:textAppearance="@style/mi_lanting_bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/left_hand_btn"
                android:background="@mipmap/left_hand_gray"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/left_hand"/>
            <Button
                android:textAppearance="@style/mi_lanting_bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/right_hand_btn"
                android:background="@mipmap/right_hand_gray"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/right_hand"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
