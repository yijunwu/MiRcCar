<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <SeekBar
        android:focusable="true"
        android:visibility="gone"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:maxHeight="15dp"
        android:max="2000"
        android:progress="1000"
        android:minHeight="15dp"
        android:thumb="@drawable/seekbar_thumb"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/menu_layout"
        android:background="@mipmap/linear_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/selector_back"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/ble_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ble_img"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/menu_img"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/selector_menu"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/menu_set"
        android:background="@mipmap/menu_set"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/set_layout"
        android:layout_toRightOf="@+id/menu_layout"
        android:layout_alignTop="@+id/menu_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="10dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/advanced_set"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/error_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/error"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="5">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="10dp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/turn_middle"
                            android:layout_centerVertical="true"/>
                        <SeekBar
                            android:id="@+id/turn_middle"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="1dp"
                            android:progressDrawable="@drawable/po_seekbar"
                            android:minHeight="1dp"
                            android:thumb="@drawable/seekbar_small_thumb"
                            android:layout_centerInParent="true"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="10dp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/accelerator_middle"
                            android:layout_centerVertical="true"/>
                        <SeekBar
                            android:id="@+id/accelerator_middle"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="1dp"
                            android:max="100"
                            android:progressDrawable="@drawable/po_seekbar"
                            android:minHeight="1dp"
                            android:thumb="@drawable/seekbar_small_thumb"
                            android:layout_centerInParent="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#fff"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="10dp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/turn_dr"
                            android:layout_centerVertical="true"/>
                        <SeekBar
                            android:id="@+id/turn_dr"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="1dp"
                            android:progressDrawable="@drawable/po_seekbar"
                            android:minHeight="1dp"
                            android:thumb="@drawable/seekbar_small_thumb"
                            android:layout_centerInParent="true"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="10dp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/accelerator_dr"
                            android:layout_centerVertical="true"/>
                        <SeekBar
                            android:id="@+id/accelerator_dr"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="1dp"
                            android:progressDrawable="@drawable/po_seekbar"
                            android:minHeight="1dp"
                            android:thumb="@drawable/seekbar_small_thumb"
                            android:layout_centerInParent="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/set_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/garage_imgbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@mipmap/garage"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/switch_mode_imgbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@mipmap/switch_mode"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/set_imgbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@mipmap/set"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/light_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/light_close"
                android:layout_alignParentBottom="true"/>
            <com.suke.widget.SwitchButton
                android:id="@+id/switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
            <com.suke.widget.SwitchButton
                android:id="@+id/switch_hand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/switch_button"
                android:layout_alignParentBottom="true"/>
            <ProgressBar
                android:id="@+id/battery_pro"
                android:background="@drawable/battery_empty"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:max="100"
                android:progress="50"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/battery_progress_green"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.andorid.blerc.DragView
                    android:id="@+id/drag_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ScrollView
                            android:id="@+id/left_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:layout_alignParentBottom="true">
                            <RelativeLayout
                                android:gravity="center"
                                android:id="@+id/layout_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:id="@+id/ver_left"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_centerInParent="true">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="10dp">
                                        <ImageView
                                            android:id="@+id/around_up_img"
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="85dp"
                                            android:src="@mipmap/around_up_img"/>
                                    </LinearLayout>
                                    <RelativeLayout
                                        android:id="@+id/around_bg"
                                        android:background="@mipmap/around_bg"
                                        android:layout_width="180dp"
                                        android:layout_height="180dp">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@mipmap/central_bg"
                                                android:layout_centerInParent="true"/>
                                            <ImageView
                                                android:id="@+id/around_up"
                                                android:background="@mipmap/around_up"
                                                android:visibility="gone"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"/>
                                            <ImageView
                                                android:id="@+id/around_down"
                                                android:background="@mipmap/around_down"
                                                android:visibility="gone"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentBottom="true"
                                                android:layout_centerHorizontal="true"/>
                                        </RelativeLayout>
                                    </RelativeLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="10dp">
                                        <ImageView
                                            android:id="@+id/around_down_img"
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="85dp"
                                            android:src="@mipmap/around_down_img"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/hor_left"
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerInParent="true">
                                    <LinearLayout
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent">
                                        <ImageView
                                            android:id="@+id/around_left_img1"
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="85dp"
                                            android:src="@mipmap/around_left_img"/>
                                    </LinearLayout>
                                    <RelativeLayout
                                        android:id="@+id/about_bg1"
                                        android:background="@mipmap/about_bg"
                                        android:clipChildren="false"
                                        android:layout_width="180dp"
                                        android:layout_height="180dp">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@mipmap/central_bg"
                                            android:layout_centerInParent="true"/>
                                        <ImageView
                                            android:id="@+id/around_left1"
                                            android:background="@mipmap/around_left"
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"/>
                                        <ImageView
                                            android:id="@+id/around_right1"
                                            android:background="@mipmap/around_right"
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"/>
                                    </RelativeLayout>
                                    <LinearLayout
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent">
                                        <ImageView
                                            android:id="@+id/around_right_img1"
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="85dp"
                                            android:src="@mipmap/around_right_img"
                                            android:layout_centerVertical="true"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/horiSeekBar1_layout"
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerInParent="true">
                                    <SeekBar
                                        android:id="@+id/horiSeekBar1"
                                        android:focusable="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:maxHeight="0dp"
                                        android:progress="1000"
                                        android:progressDrawable="@drawable/po_seekbar"
                                        android:minHeight="0dp"
                                        android:thumb="@drawable/seekbar_thumb"
                                        android:paddingStart="30dp"
                                        android:paddingEnd="30dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/verticalSeekBar_layout"
                                    android:visibility="invisible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="230dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerInParent="true">
                                    <com.andorid.blerc.VerticalSeekBar
                                        android:id="@+id/verticalSeekBar"
                                        android:focusable="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:maxHeight="0dp"
                                        android:progress="1000"
                                        android:progressDrawable="@drawable/po_seekbar"
                                        android:minHeight="0dp"
                                        android:thumb="@drawable/seekbar_thumb"
                                        android:paddingStart="30dp"
                                        android:paddingEnd="30dp"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </ScrollView>
                    </RelativeLayout>
                </com.andorid.blerc.DragView>
                <com.andorid.blerc.DragView
                    android:id="@+id/drag_view1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/layout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">
                        <ScrollView
                            android:id="@+id/right_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true">
                            <RelativeLayout
                                android:gravity="center"
                                android:id="@+id/layout_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/hor_right"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerInParent="true">
                                    <LinearLayout
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent">
                                        <ImageView
                                            android:id="@+id/around_left_img"
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="85dp"
                                            android:src="@mipmap/around_left_img"
                                            android:layout_centerVertical="true"/>
                                    </LinearLayout>
                                    <RelativeLayout
                                        android:id="@+id/about_bg"
                                        android:background="@mipmap/about_bg"
                                        android:layout_width="180dp"
                                        android:layout_height="180dp">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@mipmap/central_bg"
                                                android:layout_centerInParent="true"/>
                                            <ImageView
                                                android:id="@+id/around_left"
                                                android:background="@mipmap/around_left"
                                                android:visibility="gone"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"/>
                                            <ImageView
                                                android:id="@+id/around_right"
                                                android:background="@mipmap/around_right"
                                                android:visibility="gone"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentRight="true"
                                                android:layout_centerVertical="true"/>
                                        </RelativeLayout>
                                    </RelativeLayout>
                                    <LinearLayout
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent">
                                        <ImageView
                                            android:id="@+id/around_right_img"
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="85dp"
                                            android:src="@mipmap/around_right_img"
                                            android:layout_centerVertical="true"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:id="@+id/ver_right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_centerInParent="true">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="10dp">
                                        <ImageView
                                            android:id="@+id/around_up_img1"
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="85dp"
                                            android:src="@mipmap/around_up_img"/>
                                    </LinearLayout>
                                    <RelativeLayout
                                        android:id="@+id/around_bg1"
                                        android:background="@mipmap/around_bg"
                                        android:layout_width="180dp"
                                        android:layout_height="180dp">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@mipmap/central_bg"
                                                android:layout_centerInParent="true"/>
                                            <ImageView
                                                android:id="@+id/around_up1"
                                                android:background="@mipmap/around_up"
                                                android:visibility="gone"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"/>
                                            <ImageView
                                                android:id="@+id/around_down1"
                                                android:background="@mipmap/around_down"
                                                android:visibility="gone"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentBottom="true"
                                                android:layout_centerHorizontal="true"/>
                                        </RelativeLayout>
                                    </RelativeLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="10dp">
                                        <ImageView
                                            android:id="@+id/around_down_img1"
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="85dp"
                                            android:src="@mipmap/around_down_img"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/horiSeekBar_layout"
                                    android:visibility="invisible"
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerInParent="true">
                                    <SeekBar
                                        android:id="@+id/horiSeekBar"
                                        android:focusable="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:maxHeight="0dp"
                                        android:progress="1000"
                                        android:progressDrawable="@drawable/po_seekbar"
                                        android:minHeight="0dp"
                                        android:thumb="@drawable/seekbar_thumb"
                                        android:paddingStart="30dp"
                                        android:paddingEnd="30dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/verticalSeekBar1_layout"
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="230dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerInParent="true">
                                    <com.andorid.blerc.VerticalSeekBar
                                        android:id="@+id/verticalSeekBar1"
                                        android:focusable="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:maxHeight="0dp"
                                        android:progress="1000"
                                        android:progressDrawable="@drawable/po_seekbar"
                                        android:minHeight="0dp"
                                        android:thumb="@drawable/seekbar_thumb"
                                        android:layout_centerInParent="true"
                                        android:paddingStart="30dp"
                                        android:paddingEnd="30dp"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </ScrollView>
                    </RelativeLayout>
                </com.andorid.blerc.DragView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/low_speed_imgbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:src="@mipmap/low_speed_press"/>
                <ImageView
                    android:id="@+id/brake_imgbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:src="@drawable/selector_brake_imgbtn"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
