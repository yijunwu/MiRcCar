<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/setting_title_layout"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="#111317"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/preference_layout"
            android:background="@drawable/bg_setting_item"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/icon_preference_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_preference"
                android:layout_marginStart="20dp"/>
            <TextView
                android:textAppearance="@style/mi_lanting_gb"
                android:textSize="14sp"
                android:textColor="@color/white_setting"
                android:layout_gravity="center"
                android:id="@+id/tx_preference_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_preference"
                android:layout_marginStart="13dp"/>
            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textAppearance="@style/mi_lanting_gb"
                    android:textSize="12sp"
                    android:textColor="@color/white_fifty"
                    android:layout_gravity="center"
                    android:id="@+id/tx_preference_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/right_hand"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="7dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/setting_arrow"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/language_layout"
            android:background="@drawable/bg_setting_item"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/language_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_language"
                android:layout_marginStart="20dp"/>
            <TextView
                android:textAppearance="@style/mi_lanting_gb"
                android:textSize="14sp"
                android:textColor="@color/white_setting"
                android:layout_gravity="center"
                android:id="@+id/tx_language_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_language"
                android:layout_marginStart="13dp"/>
            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textAppearance="@style/mi_lanting_gb"
                    android:textSize="12sp"
                    android:textColor="@color/white_fifty"
                    android:layout_gravity="center"
                    android:id="@+id/tx_language_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chinese"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="7dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/setting_arrow"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/guide_layout"
            android:background="@drawable/bg_setting_item"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/guide_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_guide"
                android:layout_marginStart="20dp"/>
            <TextView
                android:textAppearance="@style/mi_lanting_gb"
                android:textSize="14sp"
                android:textColor="@color/white_setting"
                android:layout_gravity="center"
                android:id="@+id/tx_guide_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_guide"
                android:layout_marginStart="13dp"/>
            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textAppearance="@style/mi_lanting_gb"
                    android:textSize="12sp"
                    android:textColor="@color/white_fifty"
                    android:layout_gravity="center"
                    android:id="@+id/tx_guide_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="7dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/setting_arrow"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/version_layout"
            android:background="@drawable/bg_setting_item"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/version_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_version"
                android:layout_marginStart="20dp"/>
            <TextView
                android:textAppearance="@style/mi_lanting_gb"
                android:textSize="14sp"
                android:textColor="@color/white_setting"
                android:layout_gravity="center"
                android:id="@+id/tx_version_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_version"
                android:layout_marginStart="13dp"/>
            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textAppearance="@style/mi_lanting_gb"
                    android:textSize="12sp"
                    android:textColor="@color/white_fifty"
                    android:layout_gravity="center"
                    android:id="@+id/tx_version_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.2.3"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="7dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/setting_arrow"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/about_layout"
            android:background="@drawable/bg_setting_item"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/about_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_about"
                android:layout_marginStart="20dp"/>
            <TextView
                android:textAppearance="@style/mi_lanting_gb"
                android:textSize="14sp"
                android:textColor="@color/white_setting"
                android:layout_gravity="center"
                android:id="@+id/tx_about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_about"
                android:layout_marginStart="13dp"/>
            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textAppearance="@style/mi_lanting_gb"
                    android:textSize="12sp"
                    android:textColor="@color/white_fifty"
                    android:layout_gravity="center"
                    android:id="@+id/tx_about_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="7dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/setting_arrow"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/setting_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
</LinearLayout>
