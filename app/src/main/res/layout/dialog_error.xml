<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_round_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dialog_tip"/>
        <TextView
            android:textSize="@dimen/textsize_large"
            android:textColor="@color/dialog_tip"
            android:id="@+id/title"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="温馨提示"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/textsize_large"
        android:textColor="@color/dialog_cancel"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:text="签到成功，获得200积分"
        android:lineSpacingExtra="3dp"/>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="@dimen/textsize_large"
            android:textColor="@color/dialog_cancel"
            android:gravity="center"
            android:id="@+id/exit"
            android:background="@drawable/bg_dialog_left_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/exit"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
